<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:myapp="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_win"
    android:background="@drawable/bag"
    android:layout_gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:textColor="@color/white"
        android:text="USB"
        android:textSize="40dp"/>
    <FrameLayout
        android:id="@+id/frame_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title">

        <com.example.liujing.mygallery.CustomGallery
            android:id="@+id/gallery_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:focusable="false"
            myapp:galleryMargin="100dp"
            myapp:galleryHeight="150dp"
            myapp:galleryItems="7"
            myapp:galleryItemBgHeight="70dp"
            myapp:galleryItemBgWidth="70dp"/>
    </FrameLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/content"
        android:layout_marginLeft="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/frame_menu"
        android:focusable="true"
        android:layout_width="1000dp"
        android:layout_height="500dp"
        android:scrollbars="vertical"
        android:scrollbarThumbVertical="@drawable/scroll_bar"
        android:scrollbarTrackVertical="@drawable/scroll_bg"/>
</RelativeLayout>